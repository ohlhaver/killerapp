    <xml:lang="en" lang="en">



<title>jurnalo</title>
<%= stylesheet_link_tag 'style' %>




<title> jurnalo </title>
	</head>
	<body>
		
		

	

	
			<div class ="logo">
				<%= link_to image_tag('logo.gif'), :controller => 'groups', :l => @l%>
				</div>
				
						
				



	

<% form_tag search_rawstories_path(:l => @l), :method => :get do -%>
<div class ="search">
<div>
    <%= text_field_tag :q, params[:q],  :id => 'searchfield', :class =>"text" %>
	<%= submit_tag search_label, :id => 'searchbutton', :class => 'button', :name => nil %>
</div>

<% end -%>


<div class="profile">
	
	<% if logged_in? == false %>
		<% if @language == 2 %>

			<%= link_to 'Anmelden für eigene Autoren und Themen', :controller => 'users', :action => 'new', :l=>@l %>  
		<% else %>

			<%= link_to 'Sign up for your own authors and topics', :controller => 'users', :action => 'new', :l=>@l %>		
		<% end %>
		&nbsp;-&nbsp;
	<% end %>

    <% if logged_in? %>

	<% if params[:controller] == 'subscriptions'  %> 
		 <%='Email alerts'%>
		<% if @current_user.alerts == true %>
		<em><%= link_to unsubscribe_label, {:controller => 'subscriptions', :action => 'stop_alerts', :l => @l}%></em> &nbsp;-&nbsp;
		<%else%>
		<%= link_to subscribe_label, {:controller => 'subscriptions', :action => 'get_alerts', :l => @l}%> &nbsp;-&nbsp;
		<%end%>
	<%end%>
	<%end%>
	
	<% if logged_in? %>
      <%= h(@current_user.login) %><em> <%= link_to logout_label, session_path(:l => @l), :method => :delete %></em>
    <% else %>
      <%= link_to login_label, :controller => 'sessions', :action => 'new', :l=>@l %>
    <% end %>
	
	
  </div>
  </div>


<div class="headlines">
  <ul>
 <div id="content">
	<div class = 'message'>
	<p><%= flash[:notice] %></p>
	<p style="color: #0000C8"><%= flash[:alert] %></p>
	<%= yield %>
 </div>
</ul>
</div>


<div id="footer">
	
	
	©2008 - <%= link_to imprint_label, :controller => 'about', :action => 'imprint', :l => @l  %> - <%= link_to privacy_label, :controller => 'about', :action => 'privacy', :l => @l  %> <% if @language == 2  %> - <%= link_to 'English edition', 'http://www.jurnalo.com' %> <%end%> 
	<% if logged_in? %>	- <%= (link_to 'Feedback [+]' , :controller => 'about', :action => 'feedback', :l => @l) %> <% end %>
	</div>

	<script type="text/javascript">
	var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
	document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
	</script>
	<script type="text/javascript">
	var pageTracker = _gat._getTracker("UA-6270445-1");
	pageTracker._trackPageview();
	</script>
	
</body>
</html>