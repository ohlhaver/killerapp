<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://www.facebook.com/2008/fbml">
  <head>
    <xml:lang="en" lang="en"/>
    <title>jurnalo</title>
    <%= stylesheet_link_tag 'iui' %>
  </head>
  <body>
    <%= fb_connect_javascript_tag %>
    <%= init_fb_connect "XFBML"%>
    <div class ="logo"><%= link_to image_tag('logo.gif'), :controller => 'groups', :l => @l%></div>
    <div class ="search">
      <% form_tag search_rawstories_path(:l => @l), :method => :get do -%>
        <div>
          <%= text_field_tag :q, params[:q],  :id => 'searchfield', :class =>"text" %>
          <%= submit_tag search_label, :id => 'searchbutton', :class => 'button', :name => nil %>
        </div>
      <% end -%>
      <div class="profile">
	<% if params[:controller] == 'subscriptions'  %> 
          <span class="selected"><%= my_authors  %></span> 
        <% else %> 
          <%= link_to my_authors, :controller => 'subscriptions', :l => @l  %> 
        <% end %>&nbsp;-&nbsp;
        <% if logged_in? %>
	  <% if params[:controller] == 'subscriptions'  %> 
            <%='Email alerts'%>
            <% if @current_user.alerts == true %>
	      <em><%= link_to unsubscribe_label, {:controller => 'subscriptions', :action => 'stop_alerts', :l => @l}%></em> &nbsp;-&nbsp;
             <%else%>
               <%= link_to subscribe_label, {:controller => 'subscriptions', :action => 'get_alerts', :l => @l}%> &nbsp;-&nbsp;
             <%end%>
	  <%end%>
	<%end%>
	<% if params[:action] == 'create_topic' %> 
          <span class="selected"><%= create_topic  %></span>  
	<% else %> 
          <span class="unselected"><%= link_to create_topic, :controller => 'topics', :action => 'new', :l => @l  %> </span>
	<% end %>&nbsp;-&nbsp; 
	<% if logged_in? %> 
            <% if @current_user.facebook_user?%>
              <%= link_to h(truncate(@current_user.fb_user(facebook_session).name,15)), {:controller => 'users', :action => 'profile', :l => @l} %>
            <% else %>
              <%= link_to h(truncate(@current_user.name,15)), {:controller => 'users', :action => 'profile', :l => @l} %>
            <% end %>
            <% if facebook_session %>
              <em><a href="#" onclick='FB.Connect.logoutAndRedirect("/logout?l=<%= @l -%>")'><%= logout_label -%></a></em>
            <% else %>
              <em><%= link_to logout_label, session_path(:l => @l), :method => :delete %></em>
            <% end %>
         <% else %>
           <%= link_to login_label, :controller => 'sessions', :action => 'new', :l=>@l %>
         <% end %>
	 <% if logged_in? %>
           &nbsp;-&nbsp; <%= link_to settings_label, settings_url(:l => @l) -%>
         <% end -%>
         &nbsp;-&nbsp; <%= link_to read_list_label, {:controller => "read_list", :action => "show",:l => @l} -%>
        <%unless (logged_in? and @current_user.facebook_user?) %>
          &nbsp;-&nbsp;<%= facebook_login_button(nil,'') -%> 
        <% end -%>
        <% if logged_in? and @current_user.facebook_user? %>
        <br/><%= fb_profile_pic(@current_user.fb_user, {:size => :thumb, :facebook_logo => true})%>
        <% end %>


	
  </div>
  </div>



<div class="headlines">
  <ul>
 <div id="content">
	<div class = 'message'>
	<p><%= flash[:notice] %></p>
	<p style="color: #0000C8"><%= flash[:alert] %></p>
	<%= yield %>
 </div>
</ul>
</div>


