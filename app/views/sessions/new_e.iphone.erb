<div class="message">
<%= login_message %>
<p><%= facebook_login_button('login with your facebook account','') -%><br/>or<br/>
login with your existing jurnalo account</p>
</div>
<div class="default">
<% form_tag :controller => 'sessions', :action => 'create', :l => @l do -%>
<p><label for="login">Login</label><br/>
<%= text_field_tag 'login', params[:login], :class => 'textfield'  %></p>

<p><label for="password">Password</label><br/>
<%= password_field_tag 'password', params[:password], :class => 'textfield'  %></p>


<p><label for="remember_me">Remember me:</label>
<%= check_box_tag 'remember_me' %></p>

<p><%= submit_tag 'login', :id => 'loginbutton', :class => 'button' %> </p>

<p><%= link_to "Forgot password?", forgot_password_url(:l => @l) -%></p>

<% end -%>
<p><b><%= link_to 'Sign up as a new user!', new_user_path %></b></p>
</div>
