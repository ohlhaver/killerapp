    <% end %><span style="display:none;position:absolute;background-color:white;">&nbsp;<%= link_to recommend_label, {:controller => 'recommendations', :action =>'recommend_author', :id =>author.id, :l => @l}-%>&nbsp;&nbsp;&nbsp;&nbsp;
    </span>
  </span>
<% unless defined?(no_spacer) and no_spacer == true -%>
<br><br>
<% end -%>
</span>
<% end %>

