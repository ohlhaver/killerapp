


<% cache ( {:l => @l, :page => params[:page] || 1}) do %>

		<li>
  			<div class="pagelabel"><%= selection %> <%= date %></div>
		</li>

		<ul>
			<%= render :partial => @haufens %>
		</ul>
		<div class= "pagination" > 
			<%= will_paginate(@haufens, options = {:prev_label => previous_label + '&nbsp -&nbsp', :next_label => ' &nbsp;-&nbsp; ' + next_label}) %>
		</div>
	
	
	<% end %>
		

		<% if params[:action] == 'index' %>

			
				<br>
				<li>
				<div class="pagelabel"> <%= link_to my_authors, :controller => 'subscriptions', :l => @l  %> </div>
				</li>
				<% if @top_my_authors.size > 0 %>
				<ul>
					<%= render :partial => @top_my_authors %>
				</ul>
			<% else %>

			<div class = 'message'>
			<% if @language == 2 %>
			  <%= 'Sie haben noch keine Lieblingsautoren.' %> <br> <br>
			<%= 'Loggen Sie sich ein und klicken Sie einfach auf das ' + image_tag('plus.gif') + ' Symbol neben dem Namen Ihrer Lieblingsautoren. '  %>
			<% else %>
			 <%= 'You don\'t have any favorite authors yet.' %> <br> <br>
			<%= 'Login and simply click the ' + image_tag('plus.gif') + ' symbol next to the name of your favorite authors.'  %>
			<% end %>
			</div>
	<% end %>


		<% end %>	
		







