


<% cache ( {:l => @l, :page => params[:page] || 1}) do %>

		<li>
  			<div class="pagelabel"><%= selection %> <%= date %></div>
		</li>

		<ul>
			<%= render :partial => @haufens %>
		</ul>
		<div class= "pagination" > 
			<%= will_paginate(@haufens, options = {:prev_label => previous_label + '&nbsp -&nbsp', :next_label => ' &nbsp;-&nbsp; ' + next_label}) %>
		</div>
	
	
	<% end %>
		

		<% if params[:action] == 'index' %>

			
				<br>
				<li>
				<div class="pagelabel"> <%= link_to my_authors, :controller => 'subscriptions', :l => @l  %> </div>
				</li>
				<% if @top_my_authors.size > 0 %>
				<ul>
					<%= render :partial => @top_my_authors %>
				</ul>
			<% else %>

			<div class = 'message'>
		<% if logged_in? %>
		
			<% if @language == 2 %>
			  <%= 'Sie haben noch keine Lieblingsautoren.' %> <br> <br>
			<%= 'Klicken Sie einfach auf das ' + image_tag('plus.gif') + ' Symbol neben dem Namen Ihrer Lieblingsautoren. '  %>
			<% else %>
			 <%= 'You don\'t have any favorite authors yet.' %> <br> <br>
			<%= 'Simply click the ' + image_tag('plus.gif') + ' symbol next to the name of your favorite authors.'  %>
			<% end %>
		
		<%else%>
		
		
		
			<% if @language == 2 %>
			  <%= 'Sie haben noch keine Lieblingsautoren.' %> <br> <br>
			<%= link_to 'Loggen Sie sich ein', :controller => 'sessions', :action => 'new', :l=>@l %>  <%= ' und klicken Sie einfach auf das ' + image_tag('plus.gif') + ' Symbol neben dem Namen Ihrer Lieblingsautoren. '  %>
			<% else %>
			 <%= 'You don\'t have any favorite authors yet.' %> <br> <br>
			<%= link_to 'Login', :controller => 'sessions', :action => 'new', :l=>@l %>  <%= ' and simply click the ' + image_tag('plus.gif') + ' symbol next to the name of your favorite authors.'  %>
			<% end %>
			<% end %>
			</div>
	
<% end %>

		<% end %>	
		







