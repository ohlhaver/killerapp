<div class="message">
<%= facebook_login_button('use your facebook account') -%><br/>or<br/>
enter your information below to sign up for a new account.
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><label for="login">Login</label><br/>
<%= f.text_field :login, :class => 'textfield' %></p>

<p><label for="email">Email</label><br/>
<%= f.text_field :email, :class => 'textfield' %></p>

<p><label for="password">Password</label><br/>
<%= f.password_field :password, :class => 'textfield' %></p>

<p><label for="password_confirmation">Confirm password</label><br/>
<%= f.password_field :password_confirmation, :class => 'textfield' %></p>

<p><%= submit_tag 'sign up', :id => 'loginbutton', :class => 'button' %></p>
<% end -%>
</div>
